{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist-electron",
    "rootDir": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["DOM", "ES2022"],
    "allowJs": true,
    "checkJs": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
} 